<div class="ui large main menu">
	<div class="ui container">
		<%= link_to root_path, class: 'header item'  do %>
		<div>
			StukDo
		</div>
		<% end %>
		<% if current_user %>
		<div class="right menu">
			
			<%= link_to 'Tasks', tasks_path, class: 'item' %>
			<%= link_to 'Settings', edit_user_registration_path, class: 'item' %>						
			
			<div class="item">
				
				<%= link_to 'Logout', destroy_user_session_path, class: 'ui primary button', method: :delete %>				
			</div>			
		</div>
		<% else %>
		<div class="right menu">
			<div class="item">
				
				<%= link_to 'Log In', new_user_session_path, class: 'ui button' %>				

			</div>
			<div class="item">
				
				<%= link_to 'Sign Up', new_user_registration_path, class: 'ui primary button' %>					
			</div>			
		</div>
		<%end %>
	</div>	
</div>