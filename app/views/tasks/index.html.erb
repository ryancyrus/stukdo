<p id="notice"><%= notice %></p>

<h1>To-Do Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= task.state %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%=  link_to '<paper-button raised>Mark as Doing</paper-button>'.html_safe, change_task_path(task, state:'doing'), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
