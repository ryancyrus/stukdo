<div class="ui stackable grid container">

  <div class="five wide centered column">

<h2 class="ui header">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html=> {class: 'form ui'}) do |f| %>
  
  <%= devise_error_messages! %>
  

  <div class="field">
    
    <%= f.email_field :email,placeholder: 'Email', autofocus: true %>
  </div>

  <div class="field">
    
    
    <%= f.password_field :password,placeholder: 'Password', autocomplete: "off" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password_confirmation, placeholder: 'Confirm Password',autocomplete: "off" %>
  </div>

  
    <%= f.submit "Sign up", class: 'ui primary button' %>
  
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>