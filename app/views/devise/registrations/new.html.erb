
<div class="mdl-grid">
	<div class="mdl-cell mdl-cell--4-col"></div>
	<div class="mdl-cell mdl-cell--4-col" style="text-align:center">
		<h2>Sign up</h2>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= f.error_notification %>

		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
			<%= f.input :email, required: true, autofocus: true,label:false, input_html:{class: 'mdl-textfield__input'} %>
			<label class="mdl-textfield__label">Email</label>
		</div>
		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" >
			<%= f.input :password, required: true, label:false, input_html:{class: 'mdl-textfield__input'}%>
			<label class="mdl-textfield__label">Password</label>
			<span class="mdl-textfield__error"><%= ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %></span>
		</div>
		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
			<%= f.input :password_confirmation, required: true, label:false, input_html:{class: 'mdl-textfield__input'} %>
			<label class="mdl-textfield__label">Confirm Password</label>
		</div>


		<div class="mdl-grid">
			<div class="mdl-cell mdl-cell--12-col" style="text-align:center">
			<%= f.button :submit, "Signup" , :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent'%></div>
		</div>

		
		<% end %>

		<%= render "devise/shared/links" %>
	</div>

	<div class="mdl-cell mdl-cell--4-col"></div>
</div>