
<div class="mdl-grid">
	<div class="mdl-cell mdl-cell--4-col"></div>
	<div class="mdl-cell mdl-cell--4-col" style="text-align:center">

		<h2>Log in</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<%= f.error_notification %>

		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
			<%= f.input :email, required: false, autofocus: true ,label:false, input_html:{class: 'mdl-textfield__input'} %>
			<label class="mdl-textfield__label">Email</label>

		</div> 
		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
			<%= f.input :password, required: false, label: false, input_html:{class: 'mdl-textfield__input'} %>
			<label class="mdl-textfield__label">Password</label>
		</div>




		<div class="mdl-grid">
			<div class="mdl-cell mdl-cell--12-col" style="text-align:center">
			<%= f.button :submit, "Log in" , :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent'%></div>
		</div>

		<% end %>
		<div>
			<%= render "devise/shared/links" %>
		</div>
	</div>
	<div class="mdl-cell mdl-cell--4-col"></div>
</div>

