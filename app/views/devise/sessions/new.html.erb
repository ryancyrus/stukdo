<div class="mdl-grid">

	<div class="mdl-cell mdl-cell--4-col"></div>
	<div class="mdl-cell mdl-cell--4-col" style="text-align:center">
		<h3>Log in</h3>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= f.label :email, :class => 'mdl-textfield__label'%>
				<%= f.email_field :email,  :class => 'mdl-textfield__input' %>
			</div>

			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= f.label :password, :class => 'mdl-textfield__label'%>
				<%= f.password_field :password, autocomplete: "off", :class => 'mdl-textfield__input' %>
			</div>
			<div class="mdl-grid">
				<div class="mdl-cell mdl-cell--3-col"></div>
				<div class="mdl-cell mdl-cell--3-col"></div>
				<div class="mdl-cell mdl-cell--4-col">
					<% if devise_mapping.rememberable? -%>
						<label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-1">
							<%= f.check_box :remember_me, :class => 'mdl-checkbox__input', :id => 'checkbox-1' %>
							<%= f.label :remember_me, :class => 'mdl-checkbox__label' %>
						</label>
					<% end -%>
				</div>
				<div class="mdl-cell mdl-cell--2-col"></div>
			</div>
			<div class="mdl-grid">
				<div class="actions mdl-cell mdl-cell--12-col">
					<%= f.submit "Log in", :class=> 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
				</div>
			</div>
		<% end %>

	<%= render "devise/shared/links" %>
	</div>
</div>	

