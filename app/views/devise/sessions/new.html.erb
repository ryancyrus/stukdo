<div class="ui stackable grid container">

  <div class="five wide centered column">
    <h2 class="ui header">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'ui form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      
      <%= f.email_field :email,placeholder: 'Email', autofocus: true %>
    </div>

    <div class="field">
      
      <%= f.password_field :password,placeholder: 'Password', autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class="ui checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      </div>
    </div>
    <% end -%>

    
      <%= f.submit "Log in", class: 'ui button' %>
    
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>